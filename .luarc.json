{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "workspace": {
    "library": [
      "/opt/nvim-linux64/share/nvim/runtime/lua",
      "${3rd}/busted/library",
      "${3rd}/luv/library"
    ],
    "ignoreDir": [
      "test"
    ],
    "checkThirdParty": "Disable"
  },
  "diagnostics": {
    "groupFileStatus": {
      "strict": "Opened",
      "strong": "Opened"
    },
    "groupSeverity": {
      "strong": "Warning",
      "strict": "Warning"
    },
    "unusedLocalExclude": [ "_*" ],
    "disable": [
      "luadoc-miss-see-name"
    ],
    "globals": [
      "exclude_files",
      "globals",
      "read_globals",
      "ignore",
      "cache",
      "self",
      "files",
      "std",
      "stds",
      "vim"
    ]
  }
}
